@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UserModel
@{
    ViewData["Title"] = "Register";
}
@if (TempData["MensagemErro"] != null)
{
<div class="alert alert-danger" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
    @TempData["MensagemErro"]
</div>
}
@if (TempData["MensagemSucesso"] != null)
{
<div class="alert alert-success" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
    @TempData["MensagemSucesso"]
</div>
}
<div class="container">
    <div class="register-box">
        <h1 class="text-center">Registre-se</h1>

        <form asp-controller="Users" asp-action="Criar" method="post" id="registerForm">
            <div class="row g-3">
                <div class="col-md-6">
                    <label for="firstName" class="form-label">Primeiro Nome</label>
                    <input type="text" asp-for="Name" class="form-control" id="firstName" required>
                    <div class="invalid-feedback">
                        Nome deve conter no mínimo 2 letras e não pode ter números.
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="text" asp-for="Email"  class="form-control" id="email" required>
                    <div class="invalid-feedback">
                        O e-mail deve conter "@@" e terminar com ".com".
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="validationCustom04" class="form-label">Genêro</label>
                    <select class="form-select" type="text" asp-for="Gender" id="validationCustom04" required>
                        <option selected disabled value="">Selecione seu gênero</option>
                        <option>Masculino</option>
                        <option>Feminino</option>
                    </select>
                    <div class="invalid-feedback">
                        Por favor selecione um gênero válido.
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="postalCode" class="form-label">Código Postal</label>
                    <input type="text" asp-for="Zip"  class="form-control" id="postalCode" required>
                    <div class="invalid-feedback">
                        Código Postal deve estar no formato 00000-000.
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="password" class="form-label">Senha</label>
                    <input type="text" asp-for="Password" class="form-control" id="password" required>
                    <div class="invalid-feedback">
                        A senha deve ter no mínimo 4 caracteres.
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="validationCustomUsername" class="form-label">Username</label>
                    <div class="input-group has-validation">
                        <span class="input-group-text" id="inputGroupPrepend">@@</span>
                        <input type="text" asp-for="Username"  class="form-control" id="validationCustomUsername" aria-describedby="inputGroupPrepend" required>
                        <div class="invalid-feedback">
                            Por favor escolha um nome de usuário.
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
                        <label class="form-check-label" for="invalidCheck">
                            Tenho 18 anos
                        </label>
                        <div class="invalid-feedback">
                            Você precisa ter no mínimo 18 anos!
                        </div>
                    </div>
                </div>
                    <button class="btn btn-primary w-100" type="submit" onclick="validateRegisterForm()">Cadastrar</button>
                
            </div>
        </form>

    </div>
</div>

        <div class="title-wrapper-contact">
            <p>Precisa de Ajuda?</p>
            <h3>Contatos</h3>
        </div>
        <div class="contact-card-block">
            <div class="contact-card-item">
                <img src="~/images/whatsapp.png" alt="contact" />
                <div class="contact-text-content">
                    <h3>WhatsApp</h3>
                    <p>(41) 99999-9999</p>
                </div>
            </div>
            <div class="contact-card-item">
                <img src="~/images/telefone.png" alt="contact" />
                <div class="contact-text-content">
                    <h3>Telefone</h3>
                    <p>+55 (41) 3555-5555</p>
                </div>
            </div>
            <div class="contact-card-item">
                <img src="~/images/gmail.png" alt="contact" />
                <div class="contact-text-content">
                    <h3>Gmail</h3>
                    <p>BNCgmail@gmail.com</p>
                </div>
            </div>
            <div class="contact-card-item">
                <img src="~/images/telegram.png" alt="contact" />
                <div class="contact-text-content">
                    <h3>Telegram</h3>
                    <p>(41) 88888-8888</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/site.js"></script>
}

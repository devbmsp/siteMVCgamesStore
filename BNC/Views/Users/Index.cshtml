@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BNC.Models.UserModel
@{
    ViewData["Title"] = "Home Page";
}
@if (TempData["MensagemErro"] != null)
{
<div class="alert alert-danger" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
    @TempData["MensagemErro"]
</div>
}
@if (TempData["MensagemSucesso"] != null)
{
<div class="alert alert-success" role="alert">
    <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
    @TempData["MensagemSucesso"]
</div>
}
    <section class="catalog" id="catalog">
        <div class="content">
            <div class="header-block">
                <div class="text">
                    <h2>Bem Vindo ao BNC!</h2>
                    <h2>O Console Perfeito Para você!</h2>
                    <p>
                        Grandes Descontos e Ofertas, Venha já e obtenha seu novo Console !!!
                        Aceitamos trocas!!
                    </p>
                </div>
                <img src="~/images/ps5.webp" alt="ps5"/>
            </div>
            <div class="title-wrapper-catalog">
                <p>Encontre o que Procura!</p>
                <h3>Catálogo</h3>
            </div>
            <div class="filter-card">

                <input type="text" class="search-input" placeholder="Qual console está procurando?" id="searchInput"
                       onkeyup="filterCatalog()"/>
           </div>
            @if (Model != null && Model.Email == "admin@bnc.com") 
            {
                <div class="filter-card">
                    <button onclick="adicionarPost()" id="addPost" class="cardPost">Adicionar Post</button>
                </div>

                <div id="addPostModal" class="modal-container">
                    <div class="modal">
                        <h2>Adicionar Novo Post</h2>
                        <form id="addPostForm">
                            <label for="postTitle">Título:</label>
                            <input type="text" id="postTitle" required><label for="postDescription">Descrição:</label>
                            <textarea id="postDescription" rows="3" required></textarea>
                            <label for="postImage">URL da Imagem:</label>
                            <input type="text" id="postImage" required>
                            <button type="button" onclick="saveNewPost()">Salvar</button>
                            <button type="button" onclick="closeAddPostModal()">Cancelar</button>
                        </form>
                    </div>

                </div>

                <div class="card-wrapper"></div>
            }
            <div class="card-wrapper">
                <div id="card1" class="card-item">
                    @if (Model != null && Model.Email == "admin@bnc.com")
                    {
